#include<stdio.h>
#include<math.h>
int main()
{
    float a,b,c,D,x,x1,x2;
    printf("Program Mencari Akar Persamaan Kuadrat\n");
    printf("  Bentuk Persamaan ax^2 + bx + c = 0\n");
    printf("======================================================\n");
    printf(" Masukan Nilai Koefisien a = ");scanf("%f",&a);
    printf(" Masukan Nilai Koefisien b = ");scanf("%f",&b);
    printf(" Masukan Nilai Koefisien c = ");scanf("%f",&c);
    printf("------------------------------------------------------\n");
        if (a==0)
    {printf(" bukan persamaan kuadrat atau nilai a tidak boleh 0\n");}
        else if (a!=0)
   {
       {D = (b*b)-(4*a*c);
    printf(" Diskriminan = %2.2f\n",D);
    printf("------------------------------------------------------\n");}
        if  (D<0)
    {printf(" Adalah Bilangan Imajiner atau nilai D tidak boleh <0\n");}
        else if (D>=0)
    {x1=((-b+sqrt(D))/(2*a));
    printf(" x1 = %4.3f\n",x1);
    x2=((-b-sqrt(D))/(2*a));
    printf(" x2 = %4.3f\n",x2);
    printf("------------------------------------------------------\n");}
    }
return 0;
}
